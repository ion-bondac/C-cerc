
#include <iostream>
#include <cmath>
using namespace std;
float latura(float x1,float y1, float x2,float y2)
{
    float d;
    d=sqrt((pow((x1-x2),2))+(pow((y1-y2),2)));
    return d;
}

float heron(float d1, float d2, float d3)
{
    float p,S;
    if (d1>d2+d3 || d2>d1+d3 || d3>d1+d2)
        return 0;
    else {
        p=(d1+d2+d3)/2;
        return sqrt(p*(p-d1)*(p-d2)*(p-d3));
    }
}
int main()
{
    float xa,ya,xb,yb,xc,yc,xd,yd,dab,dac,dbc,dao,dbo,dco,s,s1;
    xa=1;
    ya=1;
    xb=5;
    yb=2;
    xc=3;
    yc=4;
    xd=6;
    yd=4;
    dab=latura(xa,ya,xb,yb);
    dac=latura(xa,ya,xc,yc);
    dbc=latura(xb,yb,xc,yc);
    s=heron(dab,dac,dbc);
    dao=latura(xa,ya,xd,yd);
    dbo=latura(xb,yb,xd,yd);
    dco=latura(xc,yc,xd,yd);
    saob=heron(dab,dao,abo);
    saoc=heron(dac,dao,aco);
    sboc=heron(dbs,dbo,aco);
